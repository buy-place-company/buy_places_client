<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar.Preference">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:textColorSecondaryInverse">@color/text_or_icons</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="@style/Base.Widget.AppCompat.Button">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:textColor">@color/text_or_icons</item>
    </style>

    <style name="ClusterItemBackgroundColor">
        <item name="android:background">#e3fbe734</item>
    </style>

    <style name="ClusterRenderBackgroundColor">
        <item name="android:background">#e3fb253a</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="TransparentActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="TransparentActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBarPopupTheme" parent="Base.Theme.AppCompat.Light">
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
        <item name="tabTextAppearance">@style/TabLayoutStyle.TextAppearance</item>
    </style>

    <style name="TabLayoutStyle.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Giant.Colored" parent="@style/TextAppearance.AppCompat.Inverse">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Montaga">
        <item name="fontFamily">montaga</item>
    </style>
</resources>
