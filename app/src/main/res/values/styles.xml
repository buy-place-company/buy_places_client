<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:selectableItemBackground">@color/background</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ClusterItemBackgroundColor">
        <item name="android:background">#e3fbe734</item>
    </style>

    <style name="ClusterRenderBackgroundColor">
        <item name="android:background">#e3fb253a</item>
    </style>

    <style name="ActionBarStyle" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ActionBarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">

    </style>
</resources>
