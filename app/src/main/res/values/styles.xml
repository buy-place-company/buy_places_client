<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="@style/Base.Widget.AppCompat.Button">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">@color/text_or_icons</item>
    </style>

    <style name="ClusterItemBackgroundColor">
        <item name="android:background">#e3fbe734</item>
    </style>

    <style name="ClusterRenderBackgroundColor">
        <item name="android:background">#e3fb253a</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>

    </style>

    <style name="ActionBarPopupTheme" parent="Base.Theme.AppCompat.Light">
    </style>
</resources>
