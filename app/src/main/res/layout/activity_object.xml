<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </android.support.design.widget.CollapsingToolbarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:background="@drawable/shadow_rectangle"
           >

            <ImageView
                android:id="@+id/image_view_venues_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_home_white_48dp" />

            <TextView
                android:id="@+id/text_view_venues_level"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:background="@drawable/circle_background"
                android:padding="4dp"
                android:text="10"
                android:textSize="8sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_alignTop="@+id/image_view_venues_icon"
                android:layout_alignStart="@+id/image_view_venues_icon" />

            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/image_view_venues_icon"
                android:id="@+id/text_view_venues_name"
                android:text="МГТУ им. Н. Э. Баумана"/>

            <TextView
                android:id="@+id/text_view_venues_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_cash_usd_white_18dp"
                tools:ignore="RtlHardcoded"
                android:layout_below="@+id/text_view_venues_name"
                android:layout_toEndOf="@+id/image_view_venues_icon"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/text_view_venues_checkins_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_foursquare_white_18dp"
                tools:ignore="RtlHardcoded"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_below="@+id/text_view_venues_name"
                android:layout_toEndOf="@+id/text_view_venues_price" />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Владелец: "
                android:id="@+id/text_view_owner_label" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/venues_owner_hint"
                android:id="@+id/text_view_owner" />
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_info"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1e000000"/>

    <FrameLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
