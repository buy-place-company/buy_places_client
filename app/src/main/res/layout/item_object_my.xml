<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="?android:attr/selectableItemBackground"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        style="@style/BackgroundStyleItem">
    </RelativeLayout>

    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/image_view_rating"
        android:src="@drawable/ic_launcher"
        android:layout_margin="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:id="@+id/text_view_name"
        android:text="МГТУ им Баумана"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:layout_alignTop="@+id/image_view_rating"
        android:layout_toRightOf="@+id/image_view_rating"
        android:layout_toEndOf="@+id/image_view_rating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/checkins_message"
        android:id="@+id/tv_chekins"
        android:drawableLeft="@drawable/ic_foursquare_grey600_18dp"
        android:layout_below="@+id/tv_category"
        android:layout_toRightOf="@+id/image_view_rating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tv_category"
        android:layout_below="@+id/text_view_name"
        android:layout_toRightOf="@+id/image_view_rating"

        />

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="10"
        android:background="@drawable/shadow_circle"
        android:id="@+id/tv_level"
        android:layout_alignTop="@+id/image_view_rating"
        android:layout_alignStart="@+id/image_view_rating"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:gravity="center"
        android:textSize="13sp"
        android:textIsSelectable="false"
        android:padding="3dp" />

</RelativeLayout>