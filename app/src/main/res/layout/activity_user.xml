<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nabrosok" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="ru.tp.buy_places.fragments.objects.ObjectFragment"
            android:background="@drawable/nabrosok">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="38dp"
                android:id="@+id/image_view_user"
                android:src="@mipmap/ava" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:background="@drawable/circle_background"
                android:id="@+id/tv_level"
                android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                android:gravity="center"
                android:textSize="35sp"
                android:textIsSelectable="false"
                android:padding="3dp"
                android:layout_alignTop="@+id/image_view_user"
                android:layout_alignStart="@+id/image_view_user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/text_view_user_name"
                android:text="Юзернейм"
                android:layout_below="@+id/tv_level"
                android:layout_toEndOf="@+id/image_view_user"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="10000"
                android:id="@+id/tv_score"
                android:layout_below="@+id/text_view_user_name"
                android:layout_alignStart="@+id/text_view_user_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/dollar_message"
                android:id="@+id/textView3"
                android:layout_alignTop="@+id/tv_score"
                android:layout_toEndOf="@+id/tv_score"
                android:layout_marginLeft="5dp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>