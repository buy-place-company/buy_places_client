<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/icon_place_list"
        android:src="@drawable/ic_launcher"
        android:layout_margin="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:id="@+id/title_place_list"
        android:text="МГТУ им Баумана"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:layout_alignTop="@+id/icon_place_list"
        android:layout_toRightOf="@+id/icon_place_list"
        android:layout_toEndOf="@+id/icon_place_list" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Цена"
        android:id="@+id/text_view_checkin"
        android:layout_below="@+id/title_place_list"
        android:layout_toRightOf="@+id/icon_place_list" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="12"
        android:id="@+id/text_view_object_level"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1000"
        android:id="@+id/textView2"
        android:layout_below="@+id/title_place_list"
        android:layout_toRightOf="@+id/text_view_checkin"
        android:layout_toEndOf="@+id/text_view_checkin"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=","
        android:id="@+id/textView3"
        android:layout_below="@+id/title_place_list"
        android:layout_alignRight="@+id/title_place_list"
        android:layout_alignEnd="@+id/title_place_list" />
</RelativeLayout>